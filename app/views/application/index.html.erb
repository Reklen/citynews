<article class="headline">
	<%= image_tag("capitolio.png") %>
	<h2>Um novo jornal está no ar</h2>
	<p><%= Faker::Lorem.paragraph(6) %> </p>
</article>


<article class="main-news">
	<div class="card">
		<h3>Últimas Notícias</h3>

		<% @articles.each do |article| %>
			<a href="<%= article_path(article) %>">
				<div class="short-new">

					<div class="img-wrapper">
						<%= image_tag(article.photo.url(:medium), class: "img-article") %>
					</div>

					<%= render partial: 'layouts/author', locals: { article: article } %>

					<div class="mini-news">
						<h4><%= article.title %></h4>
						<p><%= article.description %></p>
					</div>

				</div>
			</a>
		<% end %>
	</div>

	<div class="card">
		<h3>Eventos</h3>
		<div class="event">
			<div class="img-wrapper">
				<%= image_tag("anonovo.jpg", class: "img-article") %>
			</div>
			<div class="mini-news">
				<h4>Ano novo da alegria!</h4>
				<p><%= Faker::Lorem.paragraph(3) %></p>
			</div>
		</div>

		<div class="event">
			<div class="img-wrapper">
				<%= image_tag("carnaval.jpg", class: "img-article") %>
			</div>
			<div class="mini-news">
				<h4>O melhor carnaval da Região</h4>
				<p><%= Faker::Lorem.paragraph(3) %></p>
			</div>
		</div>
	</div>

<!-- 	<div class="card">
		<h3>Promoções</h3>
	</div> -->
</article>
