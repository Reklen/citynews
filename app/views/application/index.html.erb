<script id="main-template" type="text/x-handlebars-template">

  <div data-contentLoader-container>
    <div class="headline">
      <%= image_tag("capitolio.png") %>
      <h2>Um novo jornal est√° no ar</h2>
      <p><%= Faker::Lorem.paragraph(6) %></p>
    </div>

    <div class="main-news">
      <div class="card" data-articles>
        <div class="grid-100">
          <h3><%= t('page.news.title') %><span data-title></span></h3>
          {{#each article}}
            <a class='grid-25' href="articles/{{id}}">
              <article class="card small-height">
                <div class="img-wrapper">
                  <img src="{{photo_url}}" class="img-article">
                </div>

                <div class="mini-news">
                  <div class="author">
                    <img src="{{author_picture}}" class="user-logo">
                    por: {{author_name}} - {{city}} - {{prettifyDate date}}
                  </div>

                  <h4>{{title}}</h4>
                </div>
              </article>
            </a>
          {{/each}}
        </div>
      </div>

      <div class="card" data-events>
        <h3><%= t('page.events.title') %><span data-title></span></h3>
        {{#each event}}
          <a class='grid-25' href="events/{{id}}">
            <article class="card medium-height">
              <img src="{{photo_url}}" class="img-article">

              <div class="mini-news">
                <div class="author">
                  <img src="{{author_picture}}" class="user-logo">
                  por: {{author_name}} - {{city}} - {{prettifyDate date}}
                </div>

                <h4>{{title}}</h4>
              </div>
            </article>
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</script>

<%= render template: 'articles/index' %>

<%= render template: 'events/index' %>