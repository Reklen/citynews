<div class="mini-article">
	<% form_for @article do |f| %>
		<ul>
			<li>
				<%= f.label :photo %>
				<%= f.file_field :photo %>
			</li>
			<li>
				<%= f.label :title %>
				<%= f.text_field :title %>
			</li>
			<li>
				<%= f.label :description %>
				<%= f.text_area :description %>
			</li>
			<li>
				<%= f.submit %>
			</li>
		</ul>
	<% end %>
</div>