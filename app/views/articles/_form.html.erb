<%= simple_form_for @article do |f| %>
  <ul>
    <li> <%= f.input :title, placeholder: 'Título', label: false %> </li>
    <li> <%= f.input :description, placeholder: 'Descrição', as: :text, label: false %></li>
    <li>Anexar:</li>
    <li class="file-upload">
        <%= image_tag "icon-camera.png" %>
        <!--%= f.input :picture, as: :file, label: false%-->

        <%= f.fields_for :picture_attributes do |picture_fields| %>
          <%= picture_fields.file_field :photo %>
          <!--%= f.input :picture, as: :file, label: false%-->
        <% end %>

        <%= f.simple_fields_for :location do |l| %>
          <%= l.input :latitude, as: :hidden %>
          <%= l.input :longitude, as: :hidden %>
          <%= l.input :city, as: :hidden %>
          <%= l.input :state, as: :hidden %>
          <%= l.input :country, as: :hidden %>
        <% end %>
    </li>
  </ul>

  <div class="submit-area">
    <%= f.button :submit, "Enviar"%>
  </div>
<% end %>
